<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="horizontal"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <Button
            android:layout_centerVertical="true"
            android:id="@+id/edit_button"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/intro_button_gradient"
            android:text="Update"
            android:textColor="@color/background_tint"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/edit_button"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fadeScrollbars="false"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Salary/Wadges"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fadeScrollbars="false"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Current: 50 NGN"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fadeScrollbars="false"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Monthly"
                android:textColor="@color/Monthly"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/sr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:text="50/100% Spent / Received"/>
            <ProgressBar
                android:progressDrawable="@drawable/custom_progressbar"
                android:id="@+id/pBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:indeterminate="false"
                android:max="100"
                android:padding="5dp"
                android:minWidth="200dp"
                android:minHeight="50dp"
                android:progress="50" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/delete"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_cancel_24"/>
            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fadeScrollbars="false"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Income"
                android:textColor="@color/green" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>