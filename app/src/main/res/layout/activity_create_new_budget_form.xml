<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actitvities.CreateNewBudgetForm"
    android:orientation="vertical"
    android:background="@drawable/home_header_gradient"
    android:backgroundTint="#22FFFFFF"
    android:backgroundTintMode="src_over">
    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello, Fill up the fields and click the 'GO' button to continue"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:fontFamily="monospace" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Travel From"
        android:textSize="20dp"
        android:fontFamily="serif-monospace"/>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:hint="Departure Terminal">

        <com.google.android.material.textfield.TextInputEditText
            android:editable="false"
            android:clickable="true"
            android:id="@+id/dt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/contest_black_icon"
            android:drawablePadding="10dp"
            tools:ignore="Deprecated" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Travel To"
        android:textSize="20dp"
        android:fontFamily="serif-monospace"/>

    <com.google.android.material.textfield.TextInputLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Arival Terminal">

        <com.google.android.material.textfield.TextInputEditText
            android:editable="false"
            android:clickable="true"
            android:id="@+id/at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/help_black_icon"
            android:drawablePadding="10dp"
            tools:ignore="Deprecated" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Departing On"
        android:textSize="20dp"
        android:fontFamily="serif-monospace"/>

    <com.google.android.material.textfield.TextInputLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Date">

        <com.google.android.material.textfield.TextInputEditText
            android:editable="false"
            android:clickable="true"
            android:id="@+id/doo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_pie_chart_24"
            android:drawablePadding="10dp"
            tools:ignore="Deprecated" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Travellers"
        android:textSize="20dp"
        android:fontFamily="serif-monospace"/>

    <com.google.android.material.textfield.TextInputLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="How Many">

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="numberDecimal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/homw_black_icon"
            android:drawablePadding="10dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/intro_button_gradient"
        android:text="GO"
        android:textColor="#ffffff"/>
</LinearLayout>